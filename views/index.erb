<div class='page-header'>
  <h1>Vagrant</h1>
</div>

<table class='table'>
  <thead>
    <tr>
      <% Vagrant::Machine::ATTRIBUTES.each do |attr| %>
        <th><%= attr %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <% Vagrant::Machine::ATTRIBUTES.each do |attr| %>
          <td>
            <%=
              case attr
              when :state
                state_label(machine.state)
              else
                machine.public_send(attr)
              end
            %>
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
